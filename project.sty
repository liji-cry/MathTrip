%% CHAPTER STYLE
\def\@makechapterhead#1{
  {\parindent \z@ \raggedright \normalfont
   \ifnum \c@secnumdepth >\m@ne
      \if@mainmatter
        \Large\bfseries 第\thechapter~章
        \par\nobreak
        \vskip 20\p@
      \fi
    \fi
    \interlinepenalty\@M
    \flushleft\parbox{\textwidth}{\raggedright\huge #1}
     \par\nobreak
     \vskip 15pt
     \hrule height 0.4pt
     \vspace{2em} % ← 增加章节标题与正文的间距
  }}
\def\@makeschapterhead#1{
  {\parindent \z@ \raggedright \normalfont
    \interlinepenalty\@M
